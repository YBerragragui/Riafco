@model Riafco.Dataflex.Pro.Models.NewsDetailsModel

@{
    var imgSrc = Constant.ImagesUrl + @"Images/News/" + Model.NewsViewData.News.NewsId + @"/" + Model.NewsViewData.News.NewsImage;
    ViewBag.Title = "RIAFCO | " + Model.NewsViewData.TranslationsList.First().NewsTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.News = "active";
}

@section Styles {
    <link href="~/Content/news.css" rel="stylesheet" />
}

@section Scripts {
    <script src="~/Scripts/news.js"></script>
}

<div class="container main-container">
    <div class="row main-row">
        <div class="col-lg-9 col-md-9 col-sm-8 col-xs-12">
            <div class="newDetails-title">
                <div class="orange-line"></div>
                <img src="~/Images/title-icon-left.png" class="left-orange" />
                <h3>@Html.Raw(Model.NewsViewData.TranslationsList.First().NewsTitle)</h3>
                <img src="~/Images/title-icon-right.png" class="right-orange" />
            </div>
            <div class="newDetails-container">
                <div class="newDetails-container">
                    <div class="img-2">
                        <img src="@imgSrc" class="img-responsive img-fluid" />
                    </div>
                    <p class="intro">
                        @Html.Raw(Model.NewsViewData.TranslationsList.First().NewsSummary)
                    </p>
                    <p class="paragraph">
                        @Html.Raw(Model.NewsViewData.TranslationsList.First().NewsDescription)
                    </p>
                </div>
            </div>
            <div class="newDetails-container"></div>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-4 col-xs-12 tweet-col">
            @Html.Partial("_Twitter")
            @Html.Partial("_Newsletter", Model.SubscriberFormData)
        </div>
    </div>
</div>

@Html.Partial("Partial/_Agenda", Model.OccurrencesViewData)

@section Partners {
    @Html.Partial("_Partners", Model.PartnersViewData)
}

@section News {
    @Html.Partial("_News", Model.NewsViewDatas)
}