@model Admin.Riafco.Dataflex.Pro.Models.Authorization.FormData.ManageUserFormData

@{
    string action = ViewBag.action;
    string formId = action + "Form";
}

<script src="~/Scripts/Jquery/jquery.validate.min.js"></script>
<script src="~/Scripts/Jquery/jquery.validate.unobtrusive.min.js"></script>

@using (Html.BeginForm(action, "Users", FormMethod.Post, new { id = formId, enctype = "multipart/form-data", @class = "modal-body" }))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(d => d.UserId)
    @Html.HiddenFor(d => d.UserStatus)

    <div class="ligne_input">
        @Html.LabelFor(d => d.UserPicture)
        <span class="erreur">@Html.ValidationMessageFor(d => d.UserPicture)</span>
        @Html.TextBoxFor(d => d.UserPicture, new { @class = "champ", type = "file" })
    </div>

    <div class="ligne_input">
        @Html.LabelFor(d => d.UserName)<span class="obgligatoire">*</span>
        <span class="erreur">@Html.ValidationMessageFor(d => d.UserName)</span>
        @Html.TextBoxFor(d => d.UserName, new { @class = "champ" })
    </div>

    <div class="ligne_input">
        @Html.LabelFor(d => d.UserMail)<span class="obgligatoire">*</span>
        <span class="erreur">@Html.ValidationMessageFor(d => d.UserMail)</span>
        @Html.TextBoxFor(d => d.UserMail, new { @class = "champ" })
    </div>

    <hr class="ligne_separ" />

    <div class="ligne_input">
        <div class="text_obligatoire">
            <span class="obgligatoire">(*): champ obligatoire.</span>
        </div>
        <div class="btn_container">
            <input type="submit" class="btn_valider" value="VALIDER" />
        </div>
    </div>
}
