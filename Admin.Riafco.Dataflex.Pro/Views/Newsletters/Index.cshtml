@model Admin.Riafco.Dataflex.Pro.Models.Newsletters.ViewData.SubscribersViewData

@{
    ViewBag.Title = "RIAFCO | Gérer la newsletter.";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@section Scripts {
    <script src="~/Scripts/Jquery/jquery.validate.min.js"></script>
    <script src="~/Scripts/Jquery/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/newsletters.js"></script>
}

@section Styles {

}

<div class="page_container">
    <div class="links">
        @Ajax.ActionLink("Les abonnés", "Subscribers", "Newsletters", new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "sous_bloc", OnSuccess = "activer_lien('subscriber')" }, new { id = "subscriber", @class = "active link" })
        @Ajax.ActionLink("Les Emails Newsletter", "NewsletterMails", "Newsletters", new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "sous_bloc", OnSuccess = "activer_lien('newsletter_mail')" }, new { id = "newsletter_mail", @class = "link" })
    </div>

    <div id="sous_bloc" class="sous_bloc">
        <div class="content_container">
            @Html.Partial("Partials/_Subscribers", Model)
        </div>
    </div>
</div>
