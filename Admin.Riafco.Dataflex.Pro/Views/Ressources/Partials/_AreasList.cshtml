@model Admin.Riafco.Dataflex.Pro.Models.Ressources.ViewData.AreasViewData

<script src="~/Scripts/DataTable/data-table-demo.js"></script>

<div class="col-xs-12">
    <table id="pager-data-table" class="hover" cellspacing="0">
        <thead>
            <tr>
                <th class="text-center">NOM DE LA ZONE</th>
                <th class="text-center">OPERATIONS</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var area in Model.Areas)
            {
                <tr>
                    <td class="text-center">@area.TranslationsList.FirstOrDefault().AreaName</td>
                    <td>
                        <input type="image" id="update_area_btn" data="@area.Area.AreaId" class="icon_crud" src="~/Images/edit.png" />
                        <input type="image" id="delete_area_btn" data="@area.Area.AreaId" class="icon_crud" src="~/Images/delete.png" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>